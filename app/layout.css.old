@font-face {
  font-family: 'basictitlefont';
  src: url('fonts/basictitlefont.ttf');
}

body {
  margin: 0;
  z-index: -99;
  background-color: #fafafa;
}

.mdl-layout__header-row {
  background-color: #01579b;
}

.mdl-layout__header, .mdl-layout__header--waterfall, .mdl-layout__header-row {
  height: 50px;
  min-height: 50px;
}

#logo a {
  position: relative;
  text-transform: uppercase;
  font-family: 'basictitlefont', 'Marvel', sans-serif;;
  font-weight: bolder;
  font-size: 35px;
  text-decoration: none;
  color: white;
}

#footer-left > li > a {
  text-decoration: none;
  font-family: 'Viga', 'Open Sans', serif;
  color: white !important;
}

#footer-left > li > a:hover {
  text-decoration: underline;
}

footer {
  background-color: #424242;
  text-align: center;
}
